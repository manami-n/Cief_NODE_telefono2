<%- include('./templates/head') %>
<body>
    <header>
        <h1><%= title %></h1>
    </header>
    <main  class="container-sm">
        <% if (id===0) { %>

        <form action="/insert" method="POST" > 
            <!-- send to rutas.js -->
            <fieldset class="container-sm">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" name="nombre" id="nombre" class="form-control">
            </div>
            <div>
                <label for="apellido" class="form-label">Apellido</label>
                <input type="text" name="apellido" id="apellido" class="form-control">
            </div>
            <div>
                <label for="telefono" class="form-label">Teléfono</label>
                <input type="text" name="telefono" id="telefono" class="form-control">
            </div>
            <div>
                <label for="tipo" class="form-label">Tipo</label>
                <input type="text" name="tipo" id="tipo" class="form-control">
            </div>
            <div id="bs1" class="my-4 mx-auto">
                <input type="submit" value="<%= btn %>" class="btn btn-primary mx-4">
                <input type="reset" value="Borrar" class="btn btn-outline-primary mx-a4">
                <a href="/" class="btn btn-light mx-4">Cancelar</a>
            </div>
            </fieldset>
        </form>
    <% } else { %>
        <form action="/update" method="POST" > 
            <!-- send to rutas.js -->
            <fieldset class="container-sm">
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" name="nombre" id="nombre" class="form-control" value="<%= contacto.nombre %>">
            </div>
            <div>
                <label for="apellido" class="form-label">Apellido</label>
                <input type="text" name="apellido" id="apellido" class="form-control" value="<%= contacto.apellido %>">
            </div>
            <div>
                <label for="telefono" class="form-label">Teléfono</label>
                <input type="text" name="telefono" id="telefono" class="form-control" value="<%= contacto.telefono %>">
            </div>
            <div>
                <label for="tipo" class="form-label">Tipo</label>
                <input type="text" name="tipo" id="tipo" class="form-control" value="<%= contacto.tipo %>">
            </div>
            <input type="hidden" name="id" value="<%= contacto.id %>">
            <div id="bs1" class="my-4 mx-auto">
                <input type="submit" value="<%= btn %>" class="btn btn-primary mx-4">
                <input type="reset" value="Borrar" class="btn btn-outline-primary mx-a4">
                <a href="/" class="btn btn-light mx-4">Cancelar</a>
            </div>
            </fieldset>
        </form>
    <% } %>
    </main>
</body>
</html>